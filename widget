    <script>
        function getMoonPhase() {
            const today = new Date();
            const lp = 2551443; // Lunar cycle length in seconds (~29.53 days)
            const newMoon = new Date(Date.UTC(2000, 0, 6, 18, 14, 0)); // Reference new moon
            const phaseTime = (today - newMoon) / 1000 % lp;
            const phaseIndex = Math.floor((phaseTime / lp) * 8); 
            
            const moonPhases = [
                "ðŸŒ‘ New Moon", "ðŸŒ’ Waxing Crescent", "ðŸŒ“ First Quarter", "ðŸŒ” Waxing Gibbous",
                "ðŸŒ• Full Moon", "ðŸŒ– Waning Gibbous", "ðŸŒ— Last Quarter", "ðŸŒ˜ Waning Crescent"
            ];

            const messages = [
                "âœ¦ time to rest âœ¦", "âœ¦ time to plant the seed âœ¦", "âœ¦ time to take action âœ¦", "âœ¦ time to balance âœ¦", 
                "âœ¦ time to grow âœ¦", "âœ¦ time to illuminate âœ¦", "âœ¦ time to adjust âœ¦", "âœ¦ time to stay steady âœ¦", 
                "âœ¦ time to wrap up âœ¦"
            ];
            
            const phaseText = moonPhases[phaseIndex].split(" ");
            return `<div>${phaseText[0]} <span>${phaseText.slice(1).join(" ")}</span></div>
                    <div class='moon-message'>${messages[phaseIndex]}</div>`;
        }

        document.getElementById("moonPhaseWidget").innerHTML = getMoonPhase();
    </script>
